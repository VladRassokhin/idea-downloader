<project name="idea-teamcity" default="start" basedir=".">

    <import file="build.xml"/>
    <property file="${basedir}/idea-teamcity.properties"/>

    <target name="idea-tc-idea-plugin">
        <idea dest="idea-tc-idea-plugin"
              debug-port="6100"
              build-type="${IDEA-TC.type}"
              build-number="${IDEA-TC.number}"
              unscrambled="${IDEA-TC.unscrambled}">
            <teamcity-plugin/>
        </idea>
    </target>

    <target name="idea-tc-idea-plugin-9.1">
        <idea dest="idea-tc-idea-plugin-9.1"
              debug-port="6191"
              build-type="${IDEA-TC.type}"
              build-number="${IDEA-TC.number}"
              unscrambled="${IDEA-TC.unscrambled}">
            <teamcity-plugin/>
        </idea>
    </target>

    <target name="idea-tc-idea-plugin-9.0">
        <idea dest="idea-tc-idea-plugin-9.0"
              debug-port="6190"
              build-type="${IDEA-TC.type}"
              build-number="${IDEA-TC.number}"
              unscrambled="${IDEA-TC.unscrambled}">
            <teamcity-plugin/>
        </idea>
    </target>

    <target name="idea-tc-idea-plugin-8.1">
        <idea dest="idea-tc-idea-plugin-8.1"
              debug-port="6181"
              build-type="${IDEA-TC.type}"
              build-number="${IDEA-TC.number}"
              unscrambled="${IDEA-TC.unscrambled}">
            <teamcity-plugin/>
        </idea>
    </target>


    <target name="run-tc-idea">
        <run-app dest="idea-tc-idea-plugin"/>
    </target>
    <target name="run-tc-idea-9.1">
        <run-app dest="idea-tc-idea-plugin-9.1"/>
    </target>
    <target name="run-tc-idea-9.0">
        <run-app dest="idea-tc-idea-plugin-9.0"/>
    </target>
    <target name="run-tc-idea-8.1">
        <run-app dest="idea-tc-idea-plugin-8.1"/>
    </target>
</project>
