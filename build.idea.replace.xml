<project name="BuildServer" default="nop" basedir=".">
    <import file="build.idea.common.xml"/>


    <target name="update-idea-recreate-dest">
        <!-- recreate dir to avoid too much conditions below -->
        <mkdir dir="${idea-dest}"/>
    </target>

    <target name="update-idea-recreate-backup" depends="update-idea-recreate-dest">
        <!-- backup current IDEA -->
        <delete dir="${idea-backup}" failonerror="false"/>
        <move file="${idea-dest}" todir="${idea-backup}/"/>
    </target>

    <target name="update-idea-replace" depends="update-idea-recreate-backup">
        <move file="${idea-unpack}" todir="${idea-dest}"/>
    </target>

</project>
